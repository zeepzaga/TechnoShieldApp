<Page x:Class="TechnoShieldApp.Pages.Admin.AdminMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TechnoShieldApp.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню администратора">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="BtnProductsAndServices" Click="BtnProductsAndServices_Click" Width="250" Height="50">Товары и услуги</Button>
            <Button x:Name="BtnOrders" Width="250" Click="BtnOrders_Click" Height="50">Записи</Button>
            <Button x:Name="BtnWorkers" Width="250" Click="BtnWorkers_Click" Height="50">Работники</Button>
            <Button x:Name="BtnStat" Width="250" Click="BtnStat_Click" Height="50">Статистика</Button>
        </StackPanel>
    </Grid>
</Page>
