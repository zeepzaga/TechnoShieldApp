<Page x:Class="TechnoShieldApp.Pages.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TechnoShieldApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock TextAlignment="Right" Width="80" Style="{StaticResource TbkBody}">Логин:</TextBlock>
                <TextBox x:Name="TbLogin" Width="170"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextAlignment="Right" Width="80" Style="{StaticResource TbkBody}">Пароль:</TextBlock>
                <PasswordBox x:Name="PbPassword" Width="170"></PasswordBox>
            </StackPanel>
            <CheckBox x:Name="ChbIsRemember" Content="Запомнить меня" FontSize="20" HorizontalAlignment="Right"></CheckBox>
            <Button x:Name="BtnLogin" Click="BtnLogin_Click" HorizontalAlignment="Right" Width="250">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
